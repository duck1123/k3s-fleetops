{ config, lib, pkgs, ... }:
with lib;
mkArgoApp { inherit config lib; } {
  name = "keycloak";

  chart = lib.helmChart {
    inherit pkgs;
    chartTgz = ../../chart-archives/keycloak-24.1.0.tgz;
    chartName = "keycloak";
  };

  uses-ingress = true;

  extraOptions = {
    ingress = {
      adminDomain = mkOption {
        description = mdDoc "The ingress domain for the admin";
        type = types.str;
        default = defaultApiDomain;
      };
    };
  };

  defaultValues = cfg: {
    auth = {
      adminUser = "admin";
      existingSecret = "keycloak-admin-password";
      passwordSecretKey = "password";
    };

    ingress = with cfg.ingress; {
      enabled = true;
      ingressClassName = "traefik";
      hostname = domain;
      annotations = {
        "cert-manager.io/cluster-issuer" = clusterIssuer;
        "ingress.kubernetes.io/force-ssl-redirect" = "true";
      };
      tls = true;
    };

    adminIngress = with cfg.ingress; {
      enabled = true;
      ingressClassName = "traefik";
      hostname = adminDomain;
      annotations = {
        "cert-manager.io/cluster-issuer" = "letsencrypt-prod";
        "ingress.kubernetes.io/force-ssl-redirect" = "true";
      };
      tls = true;
    };
  };

  extraResources = cfg: {
    sealedSecrets.keycloak-admin-password.spec = {
      encryptedData.password =
        "";
      template.metadata = {
        inherit (cfg) namespace;
        name = "keycloak-admin-password";
      };
    };
  };
}
